package com.sourav;

import org.openrewrite.ExecutionContext;
import org.openrewrite.Recipe;
import org.openrewrite.TreeVisitor;
import org.openrewrite.quark.Quark;
import org.openrewrite.quark.QuarkVisitor;
import org.openrewrite.SourceFile;

public class ListAllFiles extends Recipe {

    @Override
    public String getDisplayName() {
        return "List all file names";
    }

    @Override
    public String getDescription() {
        return "Prints out all file names in the repository.";
    }

    @Override
    public TreeVisitor<?, ExecutionContext> getVisitor() {
        return new QuarkVisitor<ExecutionContext>() {
            @Override
            public Quark visitQuark(Quark quark, ExecutionContext ctx) {
                // Every SourceFile has a sourcePath
                getCursor().getParentOrThrow().getPath(SourceFile.class)
                    .ifPresent(sf -> System.out.println(sf.getSourcePath()));
                return quark;
            }
        };
    }
}
