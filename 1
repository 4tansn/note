tasks.withType(JavaCompile) {
    options.compilerArgs << "-Xlint:unchecked" << "-Xlint:deprecation"
    options.fork = true
    options.forkOptions.executable = 'javac'
    options.encoding = 'UTF-8'
    options.incremental = true
}

tasks.withType(Test) {
    maxParallelForks = 2
    forkEvery = 50
}
